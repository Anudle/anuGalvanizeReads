    <section class="author-info">
        <h1 class='author-name'> {{data.first_name}} {{data.last_name}}</h1>
        <div class="author-img">

            <img class="img" src="{{data.author_pic}}" alt="author img" />
        </div>
        <p class='bio'> {{data.bio}}</p>
        </div>
        <div class='editBox'>
            <a id='editBook' href="/{{data.id}}/edit-author" class="btn btn-primary">Edit {{data.first_name}} {{data.last_name}}</a>
            <a id='deleteBook' href="/{{data.id}}/question-delete-author" class="btn btn-danger">Delete {{data.first_name}} {{data.last_name}}</a>

        </div>

    </section>



